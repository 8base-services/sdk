{
  "name": "@8base/apollo-links",
  "version": "0.25.1",
  "repository": "https://github.com/8base/sdk",
  "homepage": "https://github.com/8base/sdk/tree/master/packages/apollo-links#readme",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build:clean": "rimraf dist",
    "build:ts": "tsc",
    "build": "yarn build:clean && yarn build:ts",
    "watch": "yarn build --watch",
    "docs": "NODE_ENV=test documentation readme src/TokenRefreshLink.js --section=API",
    "test": "NPM_ENV=test jest"
  },
  "dependencies": {
    "@8base/error-codes": "^1.0.12",
    "@8base/utils": "^0.25.1",
    "apollo-link": "1.2.11",
    "apollo-link-error": "^1.1.10",
    "graphql": "0.13.0",
    "graphql-tag": "^2.9.2",
    "ramda": "^0.26.1",
    "zen-observable-ts": "^0.8.18"
  },
  "devDependencies": {
    "@types/graphql": "^14.2.0",
    "@types/jest": "^24.0.13",
    "@types/ramda": "^0.26.9",
    "documentation": "^8.1.2",
    "jest": "24",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "setupFiles": [
      "<rootDir>/test/jest.setup.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/**/__tests__/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "license": "MIT"
}
