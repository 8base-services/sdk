{
  "name": "@8base/web-auth0-auth-client",
  "version": "0.25.1",
  "author": "8base",
  "repository": "https://github.com/8base/sdk",
  "homepage": "https://github.com/8base/sdk/tree/master/packages/web-auth0-auth-client#readme",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build:clean": "rimraf dist",
    "build:ts": "tsc",
    "build": "yarn build:clean && yarn build:ts",
    "watch": "yarn build --watch",
    "doc": "NODE_ENV=test documentation readme",
    "docs": "yarn doc src/index.js --section=WebAuth0AuthClient",
    "test": "NPM_ENV=test jest"
  },
  "dependencies": {
    "@8base/utils": "^0.25.1",
    "auth0-js": "^9.9.1",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@types/auth0-js": "^9.10.2",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/ramda": "^0.26.8",
    "documentation": "^8.0.0",
    "jest": "24",
    "jest-localstorage-mock": "^2.4.0",
    "prettier": "^1.16.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "setupFiles": [
      "jest-localstorage-mock"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/**/__tests__/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "license": "MIT"
}
