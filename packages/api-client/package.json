{
  "name": "@8base/api-client",
  "version": "0.1.0",
  "main": "es/index.js",
  "module": "es/index.js",
  "scripts": {
    "build": "NODE_ENV=production babel src -d es --ignore __tests__",
    "docs": "NODE_ENV=test documentation readme src/Client.js --section=API",
    "postinstall": "yarn build",
    "test": "NPM_ENV=test jest",
    "watch": "NODE_ENV=development babel src -d es --watch --ignore __tests__"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-app": "^3.1.1",
    "babel-runtime": "^6.26.0",
    "documentation": "^8.0.0",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "jest": "^23.1.0",
    "nock": "^9.3.3"
  },
  "dependencies": {
    "graphql-request": "^1.6.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/**/__tests__/**"
    ]
  },
  "license": "MIT"
}
